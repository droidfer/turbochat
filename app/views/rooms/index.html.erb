<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center bg-indigo-100 p-2 rounded">
    <h1 class="font-bold text-2xl text-indigo-600">Rooms</h1>
    <%= link_to "New Room", new_room_path, class: "rounded-md py-1 px-3 bg-transparent hover:bg-indigo-500 text-indigo-500 hover:text-white text-sm border border-indigo-500" %>
  </div>

  <div id="rooms" class="rounded border border-indigo-500 p-5 mt-3">
    <%= render @rooms %>
  </div>
</div>
