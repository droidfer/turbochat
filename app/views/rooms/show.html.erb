<div class="mx-auto flex w-full">
  <div class="mx-auto w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @room %>

    <p class="my-5">
      <strong class="block font-medium mb-1 bg-indigo-200 rounded-full items-center px-3">Messages</strong>    
    </p>

    <div class="bg-indigo-50 border border-indigo-500 p-3 rounded">
      <div id="messages" class="mb-10">
        <%= render @room.messages %>
      </div>

      <%= turbo_frame_tag "message" do %>
        <%= link_to 'New Message', new_room_message_path(@room), class: "rounded-md py-1 px-3 bg-transparent hover:bg-indigo-500 text-indigo-500 hover:text-white text-sm border border-indigo-500" %>
      <% end %>
    </div>

      

    <%= link_to "...back", rooms_path, class: "mt-5 ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium text-indigo-600 border border-indigo-600" %>

  </div>
</div>
