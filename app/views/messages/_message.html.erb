<p id="#{dom_id message}">
    <div class="flex space-x-3 mb-2">
        <div class="basis-2/12">
            <div class="bg-indigo-200 px-3 rounded-full text-white ">
                <%= message.created_at.to_formatted_s(:short) %>
            </div>
        </div>

        <div class="basis-2/12">
            <div class="bg-indigo-400 px-3 rounded-full text-white">
                <%= message.user.email %>
            </div>
        </div>

        <div class="basis-10/12">
            <%= message.content%>

            <% if message.image.attached? %>
                <%= image_tag(message.image, style:'width: 100px')%>
            <% end%>
        </div>
    </div>
</p>